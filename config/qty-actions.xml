    <action>
        <triggers>
            <keyphrase>dig</keyphrase>
        </triggers>
        <subjects>
            <entity>forest</entity>
        </subjects>
        <consumed>
        </consumed>
        <produced>
            <entity>chest</entity>
        </produced>
        <narration>You find a chest Buried at forest</narration>
    </action>

    <action>
        <triggers>
            <keyphrase>open</keyphrase>
        </triggers>
        <subjects>
            <entity>chest</entity>
