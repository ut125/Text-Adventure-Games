    <action>
        <triggers>
            <keyphrase>domagic</keyphrase>
        </triggers>
        <subjects>
            <entity>bones</entity>
            <entity>bug</entity>
            <entity>house</entity>
        </subjects>
        <consumed>
        </consumed>
        <produced>
            <entity>house</entity>
        </produced>
